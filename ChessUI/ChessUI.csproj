    <None Remove="Assets\Pawn_B.png" />
    <None Remove="Assets\Pawn_W.png" />
    <None Remove="Assets\Queen_B.png" />
    <None Remove="Assets\Queen_W.png" />
    <None Remove="Assets\Rook_B.png" />
    <None Remove="Assets\Rook_W.png" />
    <None Remove="GamesDatabase.db" />
    <None Remove="Icon.ico" />
  </ItemGroup>

  <ItemGroup>
    <Content Include="GamesDatabase.db">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Engines\**">
