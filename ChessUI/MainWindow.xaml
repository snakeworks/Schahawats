<Window x:Class="ChessUI.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:ChessUI"
        mc:Ignorable="d"
        Title="Schahawats" Height="720" Width="1000"
        WindowStartupLocation="CenterScreen"
        Background="#302E2B"
        PreviewKeyDown="Window_PreviewKeyDown">

    <Viewbox>
        <Grid
            MouseDown="Grid_MouseDown">
            <Image x:Name="BoardGrid" Source="Assets/Board.png"/>

            <UniformGrid x:Name="HighlightGrid" Rows="8" Columns="8" 
                         RenderOptions.BitmapScalingMode="HighQuality">
            </UniformGrid>

            <UniformGrid x:Name="PieceGrid" Rows="8" Columns="8"
                         RenderOptions.BitmapScalingMode="HighQuality">
            </UniformGrid>
        </Grid>
    </Viewbox>
</Window>
